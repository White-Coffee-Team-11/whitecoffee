<header class="header">
  <div class="burger" id="burger">
    <div></div>
    <div></div>
    <div></div>
  </div>

  <a href="/" class="logo" aria-label="White Coffee logo">
    <img src="/wc-logo.svg" alt="White Coffee logo" />
  </a>

  <nav class="nav">
    <a href="/campaign">NEW IN</a>
    <a href="/shop">SHOP</a>
    <a href="/features">FEATURES</a>
    <a href="/about">ABOUT</a>
  </nav>

  <div class="icons">
    <a href="#">
      <img src="/icons/search.png" alt="Search icon" />
    </a>
    <a href="#">
      <img src="/icons/bag.png" alt="Cart icon" />
    </a>
  </div>
</header>

<div class="mobile-menu">
  <a href="/">NEW IN</a>
  <a href="/shop">SHOP</a>
  <a href="/features">FEATURES</a>
  <a href="/about">ABOUT</a>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const header = document.querySelector(".header");

    if (!header) return;

    window.addEventListener("scroll", () => {
      if (window.scrollY > 80) {
        header.classList.add("scrolled");
      } else {
        header.classList.remove("scrolled");
      }
    });
  });
</script>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 3rem;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    font-family: Helvetica, sans-serif;
    transition: background-color 0.3s ease;
    background-color: transparent;
    box-sizing: border-box;
  }

  .header.scrolled {
    background-color: white;
  }

  .logo img {
    height: 70px;
    width: auto;
  }

  .nav {
    display: flex;
    gap: 4rem;
    font-weight: bold;
  }

  .nav a {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.75);
    font-size: 0.83rem;
    position: relative;
  }

  .nav a:hover {
    color: black;
  }

  div.mobile-menu a {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.75);
    font-size: 0.83rem;
    font-weight: bold;
    padding: 1rem;
    padding-left: 2rem;
  }

  div.mobile-menu a:hover {
    background-color: rgb(232, 232, 232);
    color: black;
  }

  .icons img {
    width: 25px;
    margin-left: 3rem;
  }

  .nav a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 1px;
    background-color: currentColor;
    transform: scaleX(0);
    transition: transform 0.2s ease;
    transform-origin: left;
  }

  .nav a:hover::after {
    transform: scaleX(1);
  }

  .burger {
    display: none;
    cursor: pointer;
    flex-direction: column;
    gap: 8px;
    position: relative;
    z-index: 30;
  }

  .burger div {
    width: 25px;
    height: 1px;
    background-color: black;
    transition: all 0.3s ease;
  }

  .mobile-menu {
    display: none;
    position: fixed;
    top: 80px;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: white;

    flex-direction: column;
    gap: 1rem;
    z-index: 10;
    padding-top: 3rem;
  }

  .burger.open div:nth-child(1) {
    transform: rotate(45deg) translateY(8px);
  }

  .burger.open div:nth-child(2) {
    opacity: 0;
  }

  .burger.open div:nth-child(3) {
    transform: rotate(-45deg) translateY(-15px) translateX(2.5px);
  }

  .burger div {
    transition: all 0.3s ease;
  }

  @media (max-width: 840px) {
    .nav {
      display: none;
    }

    .header {
      padding: 2rem;
    }

    .burger {
      display: flex;
    }

    .logo {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }

    .mobile-menu.active {
      display: flex;
    }
  }
</style>
