---
const products = [
  {
    name: "W LOGO CAP (BROWN)",
    price: "400,00 kr",
    image: "/caps/cap-brown.webp",
    hoverImage: "/caps/cap-brown-side.webp",
  },
  {
    name: "W LOGO CAP (NAVY)",
    price: "400,00 kr",
    image: "/caps/cap-navy.webp",
    hoverImage: "/caps/cap-navy-side.webp",
  },
  {
    name: "W LOGO CAP (REALTREE)",
    price: "400,00 kr",
    image: "/caps/cap-camo.webp",
    hoverImage: "/caps/cap-realtree-side.webp",
  },
  {
    name: "W LOGO CAP (BLACK)",
    price: "400,00 kr",
    image: "/caps/cap-black.webp",
    hoverImage: "/caps/cap-black-side.webp",
  },
];
---

<section class="bestsellers">
  <h2>BESTSELLERS:</h2>

  <div class="product-grid">
    {
      products.map((product) => (
        <div class="card">
          <div class="image-wrapper">
            <img src={product.image} alt={product.name} class="main-img" />
            <img src={product.hoverImage} alt={`${product.name} side`} class="hover-img" />
          </div>
          <div class="card-info">
            <a href="#">
              <h3>{product.name}</h3>
            </a>
            <p>{product.price}</p>
            <button>ADD TO CART</button>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .bestsellers {
    padding: 8rem 3rem;
    text-align: left;
    margin-bottom: 50px;
  }

  section.bestsellers {
    animation: fade-in linear;
    animation-timeline: view();
    animation-range-start: 0px;
    animation-range-end: 500px;
  }

  @keyframes fade-in {
    from {
      transform: translateY(400px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  a {
    color: black;
  }

  a:hover {
    text-decoration: underline;
  }

  .bestsellers h2 {
    text-align: left;
    margin-bottom: 2rem;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .card {
    padding: 0.5rem;
    max-width: 500px;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: left;
  }

  .image-wrapper {
    position: relative;
    width: 100%;
    max-width: 500px;
  }

  .image-wrapper img {
    width: 100%;
    max-width: 500px;
    display: block;
    transition: opacity 0.3s ease-in-out;
  }

  .image-wrapper .hover-img {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    cursor: pointer;
  }

  .image-wrapper:hover .hover-img {
    opacity: 1;
  }

  .image-wrapper:hover .main-img {
    opacity: 0;
  }

  .card img {
    width: 100%;
    max-width: 500px;
    height: auto;
    object-fit: contain;
  }

  .card-info h3 {
    font-size: 1rem;
    margin: 1rem 0 0.25rem;
  }

  .card-info p {
    margin: 0 0 1rem;
    color: rgba(0, 0, 0, 0.75);
    font-size: 0.9rem;
  }

  .card-info button {
    padding: 1rem 3rem;
    width: 100%;
    color: black;
    border: 1px solid #000;
    background: transparent;
    border-radius: 5px;
    font-weight: 600;
    cursor: pointer;
  }

  .card-info button:hover {
    background-color: rgb(232, 232, 232);
  }
</style>
